<style>
  .header {
    position: fixed;
    top: 4px; /* rainbow bar height */
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--gray-100);
  }
  
  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--header-height);
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }
  
  .logo-icon {
    width: 44px;
    height: 44px;
    object-fit: contain;
  }
  
  .logo-text h1 {
    font-size: 20px;
    font-weight: 900;
    color: var(--primary);
    letter-spacing: -0.5px;
    line-height: 1.2;
  }
  
  .logo-text span {
    font-size: 10px;
    color: var(--gray-400);
    font-family: var(--font-display);
    font-weight: 600;
    letter-spacing: 0.5px;
  }
  
  .nav {
    display: flex;
    gap: var(--space-1);
  }
  
  .nav-link {
    padding: var(--space-2) var(--space-4);
    color: var(--gray-600);
    font-weight: 500;
    font-size: 14px;
    border-radius: var(--radius);
    transition: all 0.2s ease;
  }
  
  .nav-link:hover {
    color: var(--primary);
    background: var(--gray-100);
  }
  
  .header-actions {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }
  
  .cart-btn {
    position: relative;
    padding: var(--space-2);
  }
  
  .cart-icon {
    font-size: 20px;
  }
  
  .cart-count {
    position: absolute;
    top: 0;
    right: 0;
    background: var(--accent);
    color: white;
    font-size: 11px;
    font-weight: 700;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-5);
    border-radius: var(--radius-full);
    font-weight: 600;
    font-size: 14px;
    border: none;
    transition: all 0.2s ease;
  }
  
  .btn-ghost {
    background: transparent;
    color: var(--gray-600);
  }
  
  .btn-ghost:hover {
    background: var(--gray-100);
  }
  
  .btn-line {
    background: var(--line-green);
    color: white;
  }
  
  .btn-line:hover {
    background: #05B04C;
    transform: translateY(-1px);
  }
  
  /* Mobile */
  .mobile-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 32px;
    height: 32px;
    background: none;
    border: none;
    padding: 4px;
  }
  
  .mobile-toggle span {
    display: block;
    width: 100%;
    height: 2px;
    background: var(--gray-600);
    border-radius: 2px;
    transition: all 0.3s ease;
  }
  
  .mobile-menu {
    display: none;
    position: fixed;
    top: calc(4px + var(--header-height));
    left: 0;
    right: 0;
    background: white;
    padding: var(--space-6);
    border-bottom: 1px solid var(--gray-200);
    box-shadow: var(--shadow-lg);
  }
  
  .mobile-nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }
  
  .mobile-nav a {
    padding: var(--space-3) var(--space-4);
    color: var(--gray-700);
    font-weight: 500;
    border-radius: var(--radius);
  }
  
  .mobile-nav a:hover {
    background: var(--gray-100);
  }
  
  @media (max-width: 768px) {
    .nav {
      display: none;
    }
    
    .header-actions .cart-btn {
      display: none;
    }
    
    .btn-text {
      display: none;
    }
    
    .mobile-toggle {
      display: flex;
    }
    
    .mobile-menu.open {
      display: block;
    }
  }
</style>

<script>
  const toggle = document.getElementById('mobileToggle');
  const menu = document.getElementById('mobileMenu');
  
  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('open');
  });
</script>
