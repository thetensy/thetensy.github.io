---
// 風格卡片組件
// 展示設計風格參考，不是模板

interface Props {
  id: string;
  name: string;
  categoryLabel: string;
  description: string;
  reference?: string;
  emoji: string;
  image: string;
  selected?: boolean;
}

const { id, name, categoryLabel, description, reference, emoji, image, selected = false } = Astro.props;
---

<button 
  class:list={['style-card', { selected }]}
  data-style-id={id}
  data-style-name={name}
  data-style-category={categoryLabel}
  type="button"
>
  <div class="style-preview">
    <img src={image} alt={name} class="style-image" loading="lazy" />
    <span class="selected-badge">✓</span>
  </div>
  
  <div class="style-info">
    <h3 class="style-name">
      <span class="style-emoji">{emoji}</span>
      {name}
    </h3>
    <span class="style-category">{categoryLabel}</span>
  </div>
</button>

<style>
  .style-card {
    display: flex;
    flex-direction: column;
    background: var(--white);
    border: 2px solid var(--gray-200);
    border-radius: var(--radius-lg);
    overflow: hidden;
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: left;
  }
  
  .style-card:hover {
    border-color: var(--gray-300);
    transform: translateY(-2px);
    box-shadow: var(--shadow);
  }
  
  .style-card.selected {
    border-color: var(--teal);
    box-shadow: 0 0 0 3px rgba(0, 180, 160, 0.15);
  }
  
  .style-preview {
    position: relative;
    aspect-ratio: 1;
    background: var(--cream);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .style-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* 打勾預設隱藏，選中時才顯示 */
  .selected-badge {
    position: absolute;
    top: var(--space-2);
    right: var(--space-2);
    width: 24px;
    height: 24px;
    background: var(--teal);
    color: white;
    border-radius: 50%;
    display: none;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: 700;
  }
  
  .style-card.selected .selected-badge {
    display: flex;
  }
  
  .style-info {
    padding: var(--space-3) var(--space-4);
  }
  
  .style-name {
    font-size: 14px;
    font-weight: 700;
    color: var(--gray-800);
    margin-bottom: 2px;
    display: flex;
    align-items: center;
    gap: 4px;
  }
  
  .style-emoji {
    font-size: 16px;
    flex-shrink: 0;
  }
  
  .style-category {
    font-size: 12px;
    color: var(--gray-500);
  }
</style>
