<script>
  // æ·»æ·»éš¨æ©Ÿé£„å‹•æ•ˆæœ
  const tenten = document.getElementById('tentenFloat');
  if (tenten) {
    let mouseX = 0;
    let mouseY = 0;
    
    document.addEventListener('mousemove', (e) => {
      const rect = tenten.getBoundingClientRect();
      const centerX = rect.left + rect.width / 2;
      const centerY = rect.top + rect.height / 2;
      
      mouseX = (e.clientX - centerX) / 50;
      mouseY = (e.clientY - centerY) / 50;
      
      tenten.style.transform = `translate(${mouseX}px, ${mouseY}px)`;
    });
  }
</script>
