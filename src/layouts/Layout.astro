---
interface Props {
  title: string;
  description?: string;
}

const { title, description = '自助式設計平台，透明價格、快速交件，讓每個品牌都能擁有專業設計' } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-TW">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | 添喜設計 Tensy Design</title>
  
  <!-- Fonts - 使用更有個性的字體組合 -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@400;500;700;900&family=Space+Grotesk:wght@400;500;600;700&family=Outfit:wght@400;600;700;800&display=swap" rel="stylesheet">
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/images/cursor.png">
</head>
<body>
  <!-- 頂部彩虹條 -->
  <div class="rainbow-bar"></div>
  <slot />
</body>
</html>

<style is:global>
  /* ===== CSS Variables ===== */
  :root {
    /* Brand Colors - 添喜彩虹系 */
    --primary: #2E3B6B;
    --primary-light: #3D4F8F;
    --primary-dark: #1E2A4A;
    
    /* Rainbow Palette */
    --rainbow-1: #FF6B6B;
    --rainbow-2: #FF8E53;
    --rainbow-3: #FFCD56;
    --rainbow-4: #4ECDC4;
    --rainbow-5: #45B7D1;
    --rainbow-6: #96E6A1;
    
    --accent: #FF6B6B;
    --accent-hover: #FF5252;
    --teal: #4ECDC4;
    --teal-light: #6EE7DE;
    
    /* Neutral Colors */
    --cream: #FFFBF5;
    --cream-dark: #FFF5E6;
    --white: #FFFFFF;
    --gray-50: #F8FAFC;
    --gray-100: #F1F5F9;
    --gray-200: #E2E8F0;
    --gray-300: #CBD5E1;
    --gray-400: #94A3B8;
    --gray-500: #64748B;
    --gray-600: #475569;
    --gray-700: #334155;
    --gray-800: #1E293B;
    
    /* Semantic Colors */
    --success: #22C55E;
    --warning: #F59E0B;
    --error: #EF4444;
    --info: #3B82F6;
    --line-green: #06C755;
    --shopee-orange: #EE4D2D;
    
    /* Rainbow Gradient */
    --gradient-rainbow: linear-gradient(90deg, 
      var(--rainbow-1) 0%, 
      var(--rainbow-2) 20%, 
      var(--rainbow-3) 40%, 
      var(--rainbow-4) 60%, 
      var(--rainbow-5) 80%, 
      var(--rainbow-6) 100%
    );
    
    /* Shadows */
    --shadow-sm: 0 1px 2px rgba(0,0,0,0.05);
    --shadow: 0 4px 20px rgba(0,0,0,0.08);
    --shadow-lg: 0 10px 40px rgba(0,0,0,0.12);
    --shadow-xl: 0 20px 60px rgba(0,0,0,0.15);
    --shadow-accent: 0 4px 20px rgba(255,107,83,0.3);
    --shadow-rainbow: 0 4px 30px rgba(78, 205, 196, 0.25);
    
    /* Border Radius */
    --radius-sm: 8px;
    --radius: 12px;
    --radius-lg: 16px;
    --radius-xl: 24px;
    --radius-2xl: 32px;
    --radius-full: 9999px;
    
    /* Spacing */
    --space-1: 4px;
    --space-2: 8px;
    --space-3: 12px;
    --space-4: 16px;
    --space-5: 20px;
    --space-6: 24px;
    --space-8: 32px;
    --space-10: 40px;
    --space-12: 48px;
    --space-16: 64px;
    --space-20: 80px;
    
    /* Typography */
    --font-sans: 'Noto Sans TC', -apple-system, BlinkMacSystemFont, sans-serif;
    --font-display: 'Outfit', 'Noto Sans TC', sans-serif;
    --font-mono: 'Space Grotesk', monospace;
    
    /* Layout */
    --max-width: 1400px;
    --header-height: 80px;
  }
  
  /* ===== Reset ===== */
  *, *::before, *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  html {
    scroll-behavior: smooth;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  body {
    font-family: var(--font-sans);
    background: var(--cream);
    color: var(--gray-800);
    line-height: 1.6;
    min-height: 100vh;
    cursor: url('/images/cursor.png'), auto;
  }
  
  /* Rainbow Bar - 動態漸層 */
  .rainbow-bar {
    height: 4px;
    background: linear-gradient(90deg, 
      var(--rainbow-1), 
      var(--rainbow-2), 
      var(--rainbow-3), 
      var(--rainbow-4), 
      var(--rainbow-5), 
      var(--rainbow-6),
      var(--rainbow-1)
    );
    background-size: 200% 100%;
    animation: rainbowMove 3s linear infinite;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
  }
  
  @keyframes rainbowMove {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
  }
  
  img, svg {
    display: block;
    max-width: 100%;
  }
  
  button, a {
    cursor: url('/images/cursor.png'), pointer;
  }
  
  button {
    font-family: inherit;
  }
  
  input, select, textarea {
    font-family: inherit;
  }
  
  a {
    color: inherit;
    text-decoration: none;
  }
  
  /* Selection */
  ::selection {
    background: var(--teal);
    color: white;
  }
  
  /* ===== Utility Classes ===== */
  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--space-6);
  }
  
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
  
  /* ===== Button Styles ===== */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-full);
    font-weight: 600;
    font-size: 14px;
    border: none;
    transition: all 0.2s ease;
    white-space: nowrap;
  }
  
  .btn-primary {
    background: var(--accent);
    color: white;
    box-shadow: var(--shadow-accent);
  }
  
  .btn-primary:hover {
    background: var(--accent-hover);
    transform: translateY(-1px);
  }
  
  .btn-secondary {
    background: var(--primary);
    color: white;
  }
  
  .btn-secondary:hover {
    background: var(--primary-light);
  }
  
  .btn-ghost {
    background: transparent;
    color: var(--gray-600);
  }
  
  .btn-ghost:hover {
    background: var(--gray-100);
    color: var(--gray-800);
  }
  
  .btn-line {
    background: var(--line-green);
    color: white;
  }
  
  .btn-line:hover {
    background: #05B04C;
  }
  
  .btn-shopee {
    background: var(--shopee-orange);
    color: white;
  }
  
  .btn-shopee:hover {
    background: #D9452A;
  }
  
  .btn-lg {
    padding: var(--space-4) var(--space-8);
    font-size: 16px;
  }
  
  .btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }
  
  /* ===== Card Styles ===== */
  .card {
    background: var(--white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow);
  }
  
  /* ===== Form Styles ===== */
  .form-label {
    display: block;
    font-size: 14px;
    font-weight: 600;
    color: var(--gray-700);
    margin-bottom: var(--space-2);
  }
  
  .form-input,
  .form-select,
  .form-textarea {
    width: 100%;
    padding: var(--space-3) var(--space-4);
    border: 2px solid var(--gray-200);
    border-radius: var(--radius);
    font-size: 15px;
    transition: all 0.2s ease;
    background: var(--white);
  }
  
  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(46, 59, 107, 0.1);
  }
  
  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }
  
  .required {
    color: var(--accent);
  }
  
  /* ===== Animation ===== */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  @keyframes slideUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in {
    animation: fadeIn 0.3s ease-out;
  }
  
  .animate-slide-up {
    animation: slideUp 0.4s ease-out;
  }
</style>
